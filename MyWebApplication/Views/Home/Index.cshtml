@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/flag.png" height="500px" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Philippines</h5>
                    <p>Magandang Araw!</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/germany.png" height="500px" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Germany</h5>
                    <p>Guter Tag</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/japan.png" height="500px" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Japan</h5>
                    <p>Konnichi wa</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only"></span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only"></span>
        </a>
    </div>
</div>
